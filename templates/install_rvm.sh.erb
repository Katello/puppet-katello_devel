#!/bin/bash

USER=<%= scope['katello_devel::user'] %>

SERVERS=(
    hkp://pgp.mit.edu
    hkp://keys.gnupg.net
)

for server in "${SERVERS[@]}"
do
    su -c "gpg --keyserver ${server} --recv-keys D39DC0E3" - $USER
    success=$?

    if [ "$success" == "0" ]; then
        break
    fi
done
su -c 'curl -sSL https://get.rvm.io | grep -v __rvm_print_headline | bash -s <%= scope['katello_devel::rvm_branch'] %> --ruby=<%= scope['katello_devel::rvm_ruby'] %> --gems=bundler' - $USER
